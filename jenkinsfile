pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git branch: 'main', credentialsId: 'Gitalb', url: 'git@gitlab.com:aymanhjd/APP-PFE.git'
            }
        }

            
        stage('Clean Docker') {
            steps {
                script {
                    sh '''

                        docker rmi -f 645052660152.dkr.ecr.us-east-1.amazonaws.com/pfe-ecr:backend-pfe || true
                        docker rmi -f 645052660152.dkr.ecr.us-east-1.amazonaws.com/pfe-ecr:dashboard-pfe || true
                      '''
                }
            }
        }
stage('Build Docker Images') {
            steps {
                script {
                    echo " Build Docker images for backend, dashboard, and frontend ..."
                    sh '''
                        docker build -t 645052660152.dkr.ecr.us-east-1.amazonaws.com/pfe-ecr:backend-pfee -f backend/dockerfile .
                        docker build -t 645052660152.dkr.ecr.us-east-1.amazonaws.com/pfe-ecr:dashboard-pfee -f dashboard/dockerfile .
                    '''
                }
            }
        }

         stage('Trivy Vulnerability Scan') {
             steps {
                script {
                         echo "Scanning Docker images with Trivy..."

                    sh """

                    trivy image --exit-code 0 --severity CRITICAL,HIGH 645052660152.dkr.ecr.us-east-1.amazonaws.com/pfe-ecr:backend-pfee
                    trivy image --exit-code 0 --severity CRITICAL,HIGH 645052660152.dkr.ecr.us-east-1.amazonaws.com/pfe-ecr:dashboard-pfee
                      
                       """
                }
        }
    }

      stage('Push Docker Image to ECR AWS') {
    steps {
        script {
            echo "Push images to ECR AWS..."
            withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'ECR']]) {

                sh """
                    echo "Connexion ECR AWS..."
                    aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 645052660152.dkr.ecr.us-east-1.amazonaws.com
                """
                

                sh """
                        docker push 645052660152.dkr.ecr.us-east-1.amazonaws.com/pfe-ecr:backend-pfee
                        docker push 645052660152.dkr.ecr.us-east-1.amazonaws.com/pfe-ecr:dashboard-pfee
                        docker push 645052660152.dkr.ecr.us-east-1.amazonaws.com/pfe-ecr:frontend-pfee
                """
            }
        }
    }
}

      stage('Deploy to Kubernetes') {
    steps {
        withKubeConfig(credentialsId: 'k8s', serverUrl: 'https://172.31.26.107:6443') {

            echo " Supprimer les anciens déploiements & services Kubernetes... "

            sh '''
                kubectl delete -f k8s-manifests/backend.yml || true
                kubectl delete -f k8s-manifests/dashboard.yml || true
                kubectl delete -f k8s-manifests/mongodb.yml || true
            '''

            

       
    

            // Appliquer les nouvelles configurations de déploiement
            
            sh '''
                kubectl apply --validate=false -f k8s-manifests/backend.yml
                kubectl apply --validate=false -f k8s-manifests/dashboard.yml
                kubectl apply --validate=false -f k8s-manifests/mongodb.yml

            '''
        }
    }
}


stage('Slack notification') {
            steps {
                script {
                    def buildStatus = currentBuild.currentResult
                    def message = "Pipeline Status: ${buildStatus}\nJob Name: ${env.JOB_NAME}\nBuild Number: ${env.BUILD_NUMBER}\nBuild URL: ${env.BUILD_URL}"

                    if (buildStatus == 'SUCCESS') {
                        slackSend(channel: '#notif_app', message: "Pipeline Succeeded\n${message}")
                    } else {
                        slackSend(channel: '#notif_app', message: "Pipeline Failed\n${message}")
                    }
                }
            }
        }

stage('Email notification') {
    steps {
        script {
            def buildStatus = currentBuild.currentResult
            def subject = "${env.JOB_NAME} - Build #${env.BUILD_NUMBER} - ${buildStatus}"
            def body = """
                <p>Pipeline Status: ${buildStatus}</p>
                <p>Job Name: ${env.JOB_NAME}</p>
                <p>Build Number: ${env.BUILD_NUMBER}</p>
                <p>Build URL: <a href='${env.BUILD_URL}'>${env.BUILD_URL}</a></p>
            """

            // Envoi du mail avec le plugin Extended Email
            emailext (
                to: 'aymanhjd@gmail.com',
                subject: subject,
                body: body,
                mimeType: 'text/html'
            )
        }
    }
}

    }
}


