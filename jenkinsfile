pipeline {
    agent any

    environment {
        BACKEND_IMAGE   = ""
        DASHBOARD_IMAGE = ""
        GIT_TAG = ""
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
                script {
                    // Récupération du tag depuis Jenkins
                    def ref = env.GIT_BRANCH
                    env.GIT_TAG = ref.replace('refs/tags/', '').trim()

                    env.BACKEND_IMAGE   = "bnbttf123/backend-image:${env.GIT_TAG}"
                    env.DASHBOARD_IMAGE = "bnbttf123/dashboard-image:${env.GIT_TAG}"
                }
            }
        }

        stage('Setup') {
            steps {
                bat "echo Setup RELEASE OK > setup.log"
            }
        }

        stage('Cleanup') {
            steps {
                bat """
                docker rm -f backend || echo ok
                docker rm -f dashboard || echo ok
                docker rm -f mongodb || echo ok

                docker rmi -f %BACKEND_IMAGE% || echo ok
                docker rmi -f %DASHBOARD_IMAGE% || echo ok
                """
            }
        }

        stage('Build Docker Images') {
            steps {
                bat """
                echo Building backend image...
                docker build -t %BACKEND_IMAGE% -f backend/dockerfile .

                echo Building dashboard image...
                docker build -t %DASHBOARD_IMAGE% -f dashboard/dockerfile .
                """
            }
        }

        stage('Run') {
            steps {
                bat """
                docker run -d --name mongodb -p 4000:27017 ^
                -e MONGO_INITDB_ROOT_USERNAME=admin ^
                -e MONGO_INITDB_ROOT_PASSWORD=admin ^
                mongo:latest

                docker run -d --name backend -p 3000:80 ^
                -e PORT=80 ^
                --link mongodb:mongodb ^
                %BACKEND_IMAGE%

                docker run -d --name dashboard -p 3001:80 ^
                --link backend:backend ^
                %DASHBOARD_IMAGE%
                """
            }
        }

        stage('Smoke Tests') {
            steps {
                bat """
                powershell -Command "try { Invoke-WebRequest http://localhost:3000/health -OutFile smoke_backend.log } catch { exit 1 }"
                powershell -Command "try { Invoke-WebRequest http://localhost:3001 -OutFile smoke_dashboard.log } catch { exit 1 }"
                """
            }
        }

        stage('Archive Artifacts') {
            steps {
                echo "Archiving logs..."
                archiveArtifacts artifacts: '*.log', allowEmptyArchive: true
            }
        }
    }
}
