pipeline {
    agent any

    environment {
        BACKEND_IMAGE  = "bnbttf123/backend-image:latest"
        DASHBOARD_IMAGE = "bnbttf123/dashboard-image:latest"
    }

    stages {

        stage('Clone') {
            steps {
                git branch: 'main', credentialsId: 'github', url: 'git@github.com:tasnimkhardani/project-devops.git'
            }
        }

        stage('Clean Docker') {
            steps {
                script {
                    bat """
                        docker rmi -f ${BACKEND_IMAGE} || true
                        docker rmi -f ${DASHBOARD_IMAGE} || true
                    """
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                script {
                    bat """
                        docker build -t ${BACKEND_IMAGE} -f backend/dockerfile .
                        docker build -t ${DASHBOARD_IMAGE} -f dashboard/dockerfile .
                    """
                }
            }
        }

        stage('Trivy Vulnerability Scan') {
            steps {
                script {
                    bat """
                        trivy image --exit-code 0 --severity CRITICAL,HIGH ${BACKEND_IMAGE}
                        trivy image --exit-code 0 --severity CRITICAL,HIGH ${DASHBOARD_IMAGE}
                    """
                }
            }
        }

        stage('Scan Server Image') {
            steps {
                script {
                    bat """
                        docker run --rm -v /var/run/docker.sock:/var/run/docker.sock aquasec/trivy:latest image \
                        --exit-code 0 --severity LOW,MEDIUM,HIGH,CRITICAL ${BACKEND_IMAGE}
                    """
                }
            }
        }

        stage('Push Images to Docker Hub') {
            steps {
                withDockerRegistry([credentialsId: "dockerhub", url: ""]) {
                    bat """
                        docker push ${BACKEND_IMAGE}
                        docker push ${DASHBOARD_IMAGE}
                    """
                }
            }
        }
    }
}
