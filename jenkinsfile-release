pipeline {
    agent any
    // Le pipeline peut s’exécuter sur n’importe quel agent Linux disponible

    triggers {
        githubPush()
        // Déclenchement automatique à chaque push sur GitHub
    }

    environment {
        // Définition des images Docker avec tag spécifique
        BACKEND_IMAGE   = "bnbttf123/backend-image:pr"
        DASHBOARD_IMAGE = "bnbttf123/dashboard-image:pr"
    }

    stages {

        stage('Checkout') {
            steps {
                // Récupération du code source depuis le dépôt Git
                checkout scm
            }
        }

        stage('Setup') {
            steps {
                // Vérification du démarrage du pipeline
                sh 'echo "Setup PR OK" > setup.log'
            }
        }

        stage('Cleanup') {
            steps {
                // Suppression des anciens conteneurs pour éviter conflits
                sh '''
                docker rm -f backend || true
                docker rm -f dashboard || true
                docker rm -f mongodb || true
                '''
            }
        }

        stage('Build Docker Images') {
            steps {
                // Construction des images Docker pour backend et dashboard
                sh '''
                docker build -t $BACKEND_IMAGE -f backend/Dockerfile .
                docker build -t $DASHBOARD_IMAGE -f dashboard/Dockerfile .
                '''
            }
        }

        stage('Security Scan') {
            steps {
                // Scan de sécurité avec Trivy pour détecter vulnérabilités critiques ou élevées
                sh '''
                echo "Scanning $BACKEND_IMAGE"
                trivy image --exit-code 1 --severity CRITICAL,HIGH $BACKEND_IMAGE

                echo "Scanning $DASHBOARD_IMAGE"
                trivy image --exit-code 1 --severity CRITICAL,HIGH $DASHBOARD_IMAGE
                '''
            }
        }

        stage('Run') {
            steps {
                // Déploiement des conteneurs
                // MongoDB d'abord, puis backend, puis dashboard
                sh '''
                docker run -d --name mongodb -p 4000:27017 mongo:latest

                docker run -d --name backend -p 3000:80 \
                  -e PORT=80 \
                  --link mongodb:mongodb \
                  $BACKEND_IMAGE

                docker run -d --name dashboard -p 3001:80 \
                  --link backend:backend \
                  $DASHBOARD_IMAGE
                '''
            }
        }

        stage('Smoke Tests') {
            steps {
                // Tests rapides pour vérifier le bon fonctionnement des services
                sh '''
                curl -f http://localhost:3000/health > smoke_backend.log
                curl -f http://localhost:3001 > smoke_dashboard.log
                '''
            }
        }

        stage('Archive Artifacts') {
            steps {
                // Archivage des logs du pipeline pour analyse ou debug
                archiveArtifacts artifacts: '*.log', allowEmptyArchive: true
            }
        }
    }
}
