pipeline {
    agent any

    when {
        buildingTag()
    }

    environment {
        BACKEND_IMAGE   = "bnbttf123/backend-image:${env.GIT_TAG_NAME}"
        DASHBOARD_IMAGE = "bnbttf123/dashboard-image:${env.GIT_TAG_NAME}"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'git@github.com:tasnimkhardani/project-devops.git',
                    credentialsId: 'github'
            }
        }

        stage('Setup') {
            steps {
                sh 'echo "Setup RELEASE OK" > setup.log'
            }
        }

        stage('Cleanup') {
            steps {
                sh '''
                docker rmi -f $BACKEND_IMAGE || true
                docker rmi -f $DASHBOARD_IMAGE || true
                docker-compose down || true
                docker rm -f $(docker ps -a) || true

                '''
            }
        }

        stage('Build & Run (Docker Compose)') {
            steps {
                sh 'docker-compose up -d --build'
            }
        }

        stage('Trivy Vulnerability Scan') {
            steps {
                sh '''
                trivy image --exit-code 1 --severity CRITICAL $BACKEND_IMAGE
                trivy image --exit-code 1 --severity CRITICAL $DASHBOARD_IMAGE
                '''
            }
        }

        stage('Push Docker Images') {
            steps {
                withDockerRegistry([credentialsId: 'Dockerhub', url: '']) {
                    sh '''
                    docker push $BACKEND_IMAGE
                    docker push $DASHBOARD_IMAGE
                    '''
                }
            }
        }

        stage('Smoke Tests') {
            steps {
                sh '''
                curl -f http://localhost:3000/health > smoke_backend.log || true
                curl -f http://localhost:3001 > smoke_dashboard.log
                '''
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '*.log', fingerprint: true, allowEmptyArchive: true
            }
        }
    }
}
