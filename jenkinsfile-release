pipeline {
    agent any

    environment {
        BACKEND_IMAGE   = "bnbttf123/backend-image"
        DASHBOARD_IMAGE = "bnbttf123/dashboard-image"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'git@github.com:tasnimkhardani/project-devops.git',
                    credentialsId: 'github'
            }
        }

        stage('Setup') {
            steps {
                sh 'echo "Setup RELEASE OK" > setup.log'
            }
        }

        stage('Cleanup') {
            steps {
                sh '''
                docker rmi -f $BACKEND_IMAGE || true
                docker rmi -f $DASHBOARD_IMAGE || true
                docker-compose down || true
                docker rm -f $(docker ps -a -q) || true

                '''
            }
        }

        stage('Build & Run (Docker Compose)') {
            steps {
                script {
                    if (env.GIT_TAG_NAME) {  // <- Vérifie si c'est un tag
                        env.BACKEND_IMAGE = "bnbttf123/backend-image:${env.GIT_TAG_NAME}"
                        env.DASHBOARD_IMAGE = "bnbttf123/dashboard-image:${env.GIT_TAG_NAME}"
                        sh 'docker-compose up -d --build'
                    } else {
                        error("Ce pipeline doit être exécuté sur un tag !")
                    }
                }
            }
        }

        stage('Trivy Vulnerability Scan') {
            steps {
                sh '''
                trivy image --exit-code 1 --severity CRITICAL $BACKEND_IMAGE
                trivy image --exit-code 1 --severity CRITICAL $DASHBOARD_IMAGE
                '''
            }
        }

        stage('Push Docker Images') {
            steps {
                script {
                    if (env.GIT_TAG_NAME) {
                        withDockerRegistry([credentialsId: 'Dockerhub', url: '']) {
                            sh '''
                            docker push $BACKEND_IMAGE
                            docker push $DASHBOARD_IMAGE
                            '''
                        }
                    }
                }
            }
        }

        stage('Smoke Tests') {
            steps {
                sh '''
                curl -f http://localhost:3000/health > smoke_backend.log
                curl -f http://localhost:3001 > smoke_dashboard.log
                '''
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '*.log', fingerprint: true, allowEmptyArchive: true
            }
        }
    }
}
