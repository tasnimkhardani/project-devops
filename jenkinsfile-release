pipeline {
    agent any

    environment {
        BACKEND_IMAGE   = "bnbttf123/backend-image"
        DASHBOARD_IMAGE = "bnbttf123/dashboard-image"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'git@github.com:tasnimkhardani/project-devops.git',
                    credentialsId: 'github'
            }
        }

        stage('Setup') {
            steps {
                sh 'echo "Setup RELEASE OK" > setup.log'
            }
        }

        stage('Cleanup') {
            steps {
                sh '''
                    docker rm -f backend || true
                    docker rm -f dashboard || true
                    docker rm -f mongodb || true
                    docker rmi -f $BACKEND_IMAGE || true
                    docker rmi -f $DASHBOARD_IMAGE || true
                    docker-compose down || true
                '''
            }
        }

        stage('Build & Run Docker Compose') {
            steps {
                script {
                    // Récupérer le tag exact du commit si existant, sinon le dernier tag
                    def tagName = sh(
                        script: "git describe --tags --exact-match || git describe --tags --abbrev=0",
                        returnStdout: true
                    ).trim()

                    echo "Tag utilisé pour le build : ${tagName}"

                    env.BACKEND_IMAGE = "bnbttf123/backend-image:${tagName}"
                    env.DASHBOARD_IMAGE = "bnbttf123/dashboard-image:${tagName}"

                    // Build et run avec Docker Compose
                    sh 'docker-compose up -d --build'
                }
            }
        }
        stage('Cleanup') {
            steps {
                sh '''
                    docker rm -f backend || true
                    docker rm -f dashboard || true
                    docker rm -f mongodb || true
                    docker rmi -f $BACKEND_IMAGE || true
                    docker rmi -f $DASHBOARD_IMAGE || true
                    docker-compose down || true
                '''
            }
        }
        stage('Build images docker and run container') {
            steps {
                sh '''
                   docker-compose up -d --build 

                '''
            }
        }

        stage('Trivy Vulnerability Scan') {
            steps {
                script {
                    echo "Scan Trivy "
                    sh """
                        docker tag $DASHBOARD_IMAGE $DASHBOARD_IMAGE:release
                        docker tag $BACKEND_IMAGE $BACKEND_IMAGE:release
                        trivy image --exit-code 1 --severity CRITICAL,HIGH $BACKEND_IMAGE:release
                        trivy image --exit-code 1 --severity CRITICAL,HIGH $DASHBOARD_IMAGE:release
                    """
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                script {
                    withDockerRegistry([credentialsId: 'Dockerhub', url: '']) {
                        sh """
                            docker push $BACKEND_IMAGE:release
                            docker push $DASHBOARD_IMAGE:release
                        """
                    }
                }
            }
        }

        stage('Smoke Tests') {
            steps {
                sh '''
                    curl -f http://54.82.59.62:3000/health > smoke_backend.log || true
                    curl -f http://54.82.59.62:3001 > smoke_dashboard.log || true
                '''
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '*.log', fingerprint: true, allowEmptyArchive: true
            }
        }
    }
}
