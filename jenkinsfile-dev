pipeline {
    agent any

    triggers {
        githubPush()
    }

    environment {
        BACKEND_IMAGE   = "bnbttf123/backend-image:dev"
        DASHBOARD_IMAGE = "bnbttf123/dashboard-image:dev"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'dev',
                    url: 'git@github.com:tasnimkhardani/project-devops.git',
                    credentialsId: 'github'
            }
        }

        stage('Setup') {
            steps {
                sh 'echo "Setup DEV OK" > setup.log'
            }
        }

        stage('Cleanup') {
            steps {
                sh '''
                docker rmi -f $BACKEND_IMAGE || true
                docker rmi -f $DASHBOARD_IMAGE || true
                docker-compose down  || true
                docker rm -f $(docker ps -a -q) || true
                '''
            }
        }

        stage('Build & Run (Docker Compose)') {
            steps {
                sh 'docker-compose up -d --build'
            }
        }

        stage('Trivy Vulnerability Scan') {
            steps {
                sh '''
                trivy image --exit-code 0 --severity CRITICAL,HIGH $BACKEND_IMAGE
                trivy image --exit-code 0 --severity CRITICAL,HIGH $DASHBOARD_IMAGE
                '''
            }
        }

        stage('Smoke Tests') {
            steps {
                sh '''
                curl -f http://localhost:3000/health > smoke_backend.log || true
                curl -f http://localhost:3001 > smoke_dashboard.log
                '''
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '*.log', fingerprint: true, allowEmptyArchive: true
            }
        }
    }
}
