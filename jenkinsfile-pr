pipeline {
    agent any

    triggers {
        githubPush()
    }

    environment {
        BACKEND_IMAGE   = "bnbttf123/backend-image"
        DASHBOARD_IMAGE = "bnbttf123/dashboard-image"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup') {
            steps {
                sh 'echo "Setup PR OK" > setup.log'
            }
        }

        stage('Cleanup') {
            steps {
                sh '''
                docker rmi -f $BACKEND_IMAGE || true
                docker rmi -f $DASHBOARD_IMAGE || true
                docker-compose down -v || true
                '''
            }
        }

        stage('build image & run container') {
            steps {
                sh '''
                   docker-compose up -d 

                '''
            }
        }
stage('Trivy Vulnerability Scan') {
            steps {
                script {
                    echo "Scanning Docker images with Trivy..."
                    sh """
                        trivy image --exit-code 0 --severity CRITICAL,HIGH $BACKEND_IMAGE
                        trivy image --exit-code 0 --severity CRITICAL,HIGH  $DASHBOARD_IMAGE
                    """
                }
            }
        }
stage('Sauvegarde les images dpcker') {
            steps {
                script {
                       withDockerRegistry([credentialsId: "Dockerhub", url: ""]) {
                   sh """
                        docker push $BACKEND_IMAGE
                        docker push $DASHBOARD_IMAGE
                    """
                }
            }
        }
}


        stage('Smoke Tests') {
            steps {
                sh '''
                curl -f http://localhost:3000/health > smoke_backend.log
                curl -f http://localhost:3001 > smoke_dashboard.log
                '''
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '*.log', allowEmptyArchive: true
            }
        }
    }
}
