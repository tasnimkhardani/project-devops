pipeline {
    agent any

    triggers {
        githubPush()
    }

    environment {
        BACKEND_IMAGE   = "bnbttf123/backend-image:pr"
        DASHBOARD_IMAGE = "bnbttf123/dashboard-image:pr"
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Setup') {
            steps {
                sh 'echo "Setup PR OK" > setup.log'
            }
        }

        stage('Cleanup') {
            steps {
                sh '''
                docker rm -f backend || true
                docker rm -f dashboard || true
                docker rm -f mongodb || true
                docker-compose down || true
                '''
            }
        }

        stage('Build Docker Images') {
            steps {
                sh '''
                docker build -t $BACKEND_IMAGE -f backend/Dockerfile .
                docker build -t $DASHBOARD_IMAGE -f dashboard/Dockerfile .
                '''
            }
        }
stage('Trivy Vulnerability Scan') {
            steps {
                script {
                    echo "Scanning Docker images with Trivy..."
                    sh """
                        trivy image --exit-code 0 --severity CRITICAL,HIGH $BACKEND_IMAGE
                        trivy image --exit-code 0 --severity CRITICAL,HIGH  $DASHBOARD_IMAGE
                    """
                }
            }
        }
stage('Sauvegarde les images dpcker') {
            steps {
                script {
                       withDockerRegistry([credentialsId: "Dockerhub", url: ""]) {
                   sh """
                        docker tag $BACKEND_IMAGE bnbttf123/$BACKEND_IMAGE 
                        docker tag $DASHBOARD_IMAGE bnbttf123/$DASHBOARD_IMAGE
                        docker push $BACKEND_IMAGE
                        docker push $DASHBOARD_IMAGE
                    """
                }
            }
        }
        stage('Run') {
            steps {
                sh '''
                   docker-compose up -d 

                '''
            }
        }

        stage('Smoke Tests') {
            steps {
                sh '''
                curl -f http://localhost:3000/health > smoke_backend.log
                curl -f http://localhost:3001 > smoke_dashboard.log
                '''
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '*.log', allowEmptyArchive: true
            }
        }
    }
}
